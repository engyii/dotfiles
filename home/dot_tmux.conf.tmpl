{{- if .features.tmux }}
# Set terminal to 256 colors
set -g default-terminal "tmux-256color"
set -ag terminal-overrides ",xterm-256color:RGB"

# Use Ctrl+Space as the prefix key
unbind C-b
set -g prefix C-Space
bind C-Space send-prefix

# Start window and pane indices at 1
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on

# Set scrollback buffer to 10000
set -g history-limit 10000

# Enable mouse mode
set -g mouse on

# Use vim keybindings in copy mode
setw -g mode-keys vi

# Vim style copy/paste
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Smart pane switching with awareness of Vim splits
bind -n C-h select-pane -L
bind -n C-j select-pane -D
bind -n C-k select-pane -U
bind -n C-l select-pane -R

# Split panes using | and -
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
unbind '"'
unbind %

# Reload config file
bind r source-file ~/.tmux.conf \; display "Config reloaded!"

# Status bar styling
set -g status-position top
set -g status-justify left
set -g status-style bg=default

# Catppuccin theme integration
set -g @catppuccin_flavour "{{ if eq .theme "catppuccin-latte" }}latte{{ else if eq .theme "catppuccin-frappe" }}frappe{{ else if eq .theme "catppuccin-macchiato" }}macchiato{{ else }}mocha{{ end }}"

# Status bar configuration
set -g status-left "#[fg=blue,bold]#S "
set -g status-right "#[fg=yellow,bold]%H:%M #[fg=green,bold]%d-%b-%y"
set -g status-right-length 50
set -g status-left-length 20

# Window status
setw -g window-status-format "#[fg=grey] #I:#W "
setw -g window-status-current-format "#[fg=white,bold] #I:#W "

# Pane borders
set -g pane-border-style fg=brightblack
set -g pane-active-border-style fg=blue

# Plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'catppuccin/tmux'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
{{- end }}